git filter-branch -f --commit-filter '
        if [ "$GIT_COMMITTER_NAME" = "Oleg Kalnichevski" ];
        then
                GIT_COMMITTER_NAME="Oleg Kalnichevski";
                GIT_AUTHOR_NAME="Oleg Kalnichevski";
                GIT_COMMITTER_EMAIL="olegk@apache.org";
                GIT_AUTHOR_EMAIL="olegk@apache.org";
                git commit-tree "$@";
        else
                git commit-tree "$@";
        fi' HEAD

